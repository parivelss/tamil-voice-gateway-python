# Server Configuration
PORT=8000
HOST=0.0.0.0
DEBUG=True

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GOOGLE_PROJECT_ID=your-google-project-id
GOOGLE_STT_LANGUAGE=ta-IN
GOOGLE_STT_ALT_LANGS=en-IN
GOOGLE_TRANSLATE_PROJECT_ID=your-translate-project-id
GOOGLE_TRANSLATE_LOCATION=global

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID_TA=your_tamil_voice_id
ELEVENLABS_VOICE_ID_EN=your_english_voice_id
ELEVENLABS_TTS_MODEL=eleven_multilingual_v2

# Sarvam AI Configuration
SARVAM_API_KEY=your_sarvam_api_key

# Default STT/TTS Providers
DEFAULT_STT_PROVIDER=sarvam
DEFAULT_TTS_PROVIDER=elevenlabs

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
